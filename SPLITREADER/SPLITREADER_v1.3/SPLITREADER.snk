for path_key in data_paths:
    if not os.path.isabs(config["DATA"][path_key]):
        raise ValueError(f"ERROR {path_key} : SPLITREADER needs absolute paths.")

#if not config["DATA"]["REFERENCE"].startswith(config["DATA"]["WORKSPACE_DIR"]):
