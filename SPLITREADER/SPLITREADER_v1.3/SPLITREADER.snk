		    # # make list of insertions for bam-readcount
		    cut -f 1-3 $cohortname-insertions.$filtname.DP$depth.bed > $cohortname-insertion-sites.0.bed
		    sed -i '/start/ d' $cohortname-insertion-sites.0.bed 
