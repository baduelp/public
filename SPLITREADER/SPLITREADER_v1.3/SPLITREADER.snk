te_files = [config["DATA"]["TE_LIB"] + ".fasta", config["DATA"]["TE_ANNOTATION"] + ".gff"]
for te_file in te_files:
    te_file_path = os.path.join(config["DATA"]["WORKSPACE_DIR"], "TE_sequence", te_file)
    if not os.path.exists(te_file_path):
        raise FileNotFoundError(f"ERROR: {te_file} not found in {os.path.join(config['DATA']['WORKSPACE_DIR'], 'TE_sequence')}")

genome_file = os.path.join(config["DATA"]["REFERENCE"], config["DATA"]["GENOME"] + ".fasta")
if not os.path.exists(genome_file):
    raise FileNotFoundError(f"ERROR: {genome_file} not found in {os.path.join(config['DATA']['REFERENCE'])}")

workspace_reference_dir = os.path.join(config["DATA"]["WORKSPACE_DIR"], "Reference")
if not os.path.exists(workspace_reference_dir):
    print(f"INFO: Creating directory {workspace_reference_dir}")
    os.makedirs(workspace_reference_dir)

destination_genome_file = os.path.join(workspace_reference_dir, os.path.basename(genome_file))
if not os.path.exists(destination_genome_file):
    print(f"INFO: Copying {genome_file} to {workspace_reference_dir}")
    shutil.copy2(genome_file, destination_genome_file)

config["DATA"]["REFERENCE"] = workspace_reference_dir

params = config.get("PARAMS", {})
for param_key, param_value in params.items():
    if not isinstance(param_value, (int, float)):
        raise ValueError(f"ERROR: {param_key} needs a value.")

for param_key in ["ENTROPY", "DUST"]:
    param_value = params.get(param_key)
    if not (isinstance(param_value, (int, float)) and 0 <= param_value <= 100):
        raise ValueError(f"ERROR: {param_key} is a value between 0 and 100.")

if not isinstance(config["CHOICE"].get("NEGATIVE_COVERAGE"), bool):
    raise ValueError("ERROR: NEGATIVE_COVERAGE has to be boolean.")

required_files = ["superfamily_TSD.txt", "TE-list.txt", "TEfamily-superfamily.txt"]
